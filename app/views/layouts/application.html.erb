<!DOCTYPE html>
<html>
  <head>
    <title>Petrehome</title>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.splashURL = "<%= asset_path('splash-image.png') %>"
      window.logoURL = "<%= asset_path('logo.png') %>"
      window.favURL = "<%= asset_path('heart-favorited.png') %>"
      window.unfavURL = "<%= asset_path('heart-unfavorited.png') %>"
      window.pawPrint = "<%= asset_path('paw-print.png') %>"
      window.searchIcon = "<%= asset_path('search-icon.png') %>"
    </script>
  </head>

  <body id="body">
    <%= yield %>
  </body>
</html>
